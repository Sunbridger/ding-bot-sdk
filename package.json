{
  "name": "ding-bot",
  "version": "0.0.1",
  "description": "推啊埋点sdk",
  "main": "dist/dingBot.main.js",
  "module": "dist/dingBot.module.js",
  "typings": "dist/index.d.ts",
  "author": "ltt",
  "license": "MIT",
  "homepage": "https://github.com/leitingting08/ding-bot/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/leitingting08/ding-bot"
  },
  "scripts": {
    "watch": "rollup -c -w",
    "build": "npm run clean && cross-env NODE_ENV=prod && rollup -c",
    "build:debug": "npm run clean && cross-env NODE_ENV=dev rollup -c",
    "clean": "rm -rf ./dist",
    "deploy": "npm run release && npm run build && npm publish --access public && git push --follow-tags",
    "lint": "prettier --write src",
    "release": "standard-version"
  },
  "typescript": ">=4.0",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rollup": "^2.33.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "standard-version": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{.ts,.tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
